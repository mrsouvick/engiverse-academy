---
// src/pages/team.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Team - EngiVerse Academy">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-bold text-center text-gray-900 mb-4">Meet Our Team</h1>
      <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
        Dedicated students working together to make engineering education accessible
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        <!-- Team Member 1 -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden text-center">
          <div class="h-40 bg-gradient-to-r from-blue-500 to-purple-600"></div>
          <div class="p-6 -mt-16">
            <div class="w-24 h-24 bg-white rounded-full border-4 border-white mx-auto mb-4 overflow-hidden">
              <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Souvick Kumar Halder</h3>
            <p class="text-blue-600 font-semibold mb-3">Founder & Admin</p>
            <p class="text-gray-600 text-sm">Overall planning, management, and academic direction</p>
          </div>
        </div>

        <!-- Team Member 2 -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden text-center">
          <div class="h-40 bg-gradient-to-r from-green-500 to-blue-400"></div>
          <div class="p-6 -mt-16">
            <div class="w-24 h-24 bg-white rounded-full border-4 border-white mx-auto mb-4 overflow-hidden">
              <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Surajit Ghosh</h3>
            <p class="text-green-600 font-semibold mb-3">Tutor</p>
            <p class="text-gray-600 text-sm">High-quality, easy-to-follow lectures and academic content</p>
          </div>
        </div>

        <!-- Team Member 3 -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden text-center">
          <div class="h-40 bg-gradient-to-r from-purple-500 to-pink-500"></div>
          <div class="p-6 -mt-16">
            <div class="w-24 h-24 bg-white rounded-full border-4 border-white mx-auto mb-4 overflow-hidden">
              <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Tanmay Maity</h3>
            <p class="text-purple-600 font-semibold mb-3">Tutor</p>
            <p class="text-gray-600 text-sm">Semester explanations, problem solutions, and core subjects</p>
          </div>
        </div>

        <!-- Team Member 4 -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden text-center">
          <div class="h-40 bg-gradient-to-r from-orange-400 to-red-500"></div>
          <div class="p-6 -mt-16">
            <div class="w-24 h-24 bg-white rounded-full border-4 border-white mx-auto mb-4 overflow-hidden">
              <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Sribash Adak</h3>
            <p class="text-orange-600 font-semibold mb-3">Graphics Designer</p>
            <p class="text-gray-600 text-sm">Thumbnails, visuals, and professional branding elements</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>